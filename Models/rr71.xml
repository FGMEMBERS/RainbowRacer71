      <pitch-deg>   0.0 </pitch-deg>
      <heading-deg> 0.0 </heading-deg>
    </offsets>
  </model>

  <!-- Disparition des roues après rentrée (gain de fps) -->
  <animation>
    <type>select</type>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <condition>
      <not>
        <equals>
          <property>gear/gear[0]/position-norm</property>
          <value>0</value>
        </equals>
      </not>
    </condition>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>controls/flight/rudder</property>
    <factor>15</factor>
    <center>
      <x-m>  3.662 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.669 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <!-- Profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>voletG</object-name>
    <property>controls/flight/elevator</property>
    <factor>15.0</factor>
    <axis>
      <x1-m>  1.740 </x1-m>
      <y1-m> -1.724 </y1-m>
      <z1-m> -0.105 </z1-m>
      <x2-m>  2.286 </x2-m>
      <y2-m> -0.364 </y2-m>
      <z2-m> -0.061 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletD</object-name>
    <property>controls/flight/elevator</property>
    <factor>15.0</factor>
    <axis>
      <x1-m>  2.286 </x1-m>
      <y1-m>  0.364 </y1-m>
      <z1-m> -0.061 </z1-m>
