      <z-m> 0.0 </z-m>
      <roll-deg>    0.0 </roll-deg>
      <pitch-deg>   0.0 </pitch-deg>
      <heading-deg> 0.0 </heading-deg>
    </offsets>
  </model>

  <!-- Flammes du réacteur -->
  <model>
    <path>Aircraft/RainbowRacer71/Models/flammes/flamme.xml</path>
    <offsets>
      <x-m>  0.426 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.395 </z-m>
    </offsets>
  </model>

